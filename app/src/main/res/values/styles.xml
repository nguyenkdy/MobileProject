<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBtn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ColorDot">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_color_circle</item>
    </style>

    <style name="PopupSlideAnim">
        <item name="android:windowEnterAnimation">@anim/popup_slide_in</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_out</item>
    </style>

</resources>