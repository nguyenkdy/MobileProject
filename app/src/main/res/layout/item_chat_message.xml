<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp"
    android:background="@android:color/transparent">

    <!-- ================= BOT MESSAGE ================= -->
    <LinearLayout
        android:id="@+id/rowBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingEnd="56dp">

        <!-- BOT AVATAR -->
        <ImageView
            android:id="@+id/imgBot"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_chatbot_new"
            android:background="@drawable/bg_avatar_circle"
            android:scaleType="centerCrop" />

        <!-- BOT BUBBLE -->
        <TextView
            android:id="@+id/txtBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"
            android:background="@drawable/bg_chat_bubble_bot"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:textColor="#1E1E1E"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- ================= USER MESSAGE ================= -->
    <LinearLayout
        android:id="@+id/rowUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingStart="56dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"
            android:background="@drawable/bg_chat_bubble_user"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

</FrameLayout>
