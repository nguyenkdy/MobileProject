<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ================= TOP BAR ================= -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside" />

        <!-- âœï¸ EDITABLE TITLE (GIá»NG NOTE) -->
        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="PDF"
            android:text="PDF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:paddingVertical="6dp"
            android:layout_marginStart="8dp" />

        <!-- ðŸ”’ READ ONLY BUTTON -->
        <ImageButton
            android:id="@+id/btnReadOnly"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_read_only"
            android:src="@drawable/ic_read_only"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- ================= PDF LIST ================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPdf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:background="#FFFFFF" />

    <!-- ================= DRAW TOOLBAR ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/drawToolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bg_toolbar_rounded"
        android:elevation="12dp">

        <!-- PEN -->
        <ImageButton
            android:id="@+id/btnPen"
            style="@style/ToolbarButtonModern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnMarker"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <!-- MARKER -->
        <ImageButton
            android:id="@+id/btnMarker"
            style="@style/ToolbarButtonModern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_marker"
            app:layout_constraintStart_toEndOf="@id/btnPen"
            app:layout_constraintEnd_toStartOf="@id/btnEraser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- ERASER -->
        <ImageButton
            android:id="@+id/btnEraser"
            style="@style/ToolbarButtonModern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_eraser"
            app:layout_constraintStart_toEndOf="@id/btnMarker"
            app:layout_constraintEnd_toStartOf="@id/btnUndo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- UNDO -->
        <ImageButton
            android:id="@+id/btnUndo"
            style="@style/ToolbarButtonModern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_undo"
            app:layout_constraintStart_toEndOf="@id/btnEraser"
            app:layout_constraintEnd_toStartOf="@id/btnRedo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- REDO -->
        <ImageButton
            android:id="@+id/btnRedo"
            style="@style/ToolbarButtonModern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_redo"
            app:layout_constraintStart_toEndOf="@id/btnUndo"
            app:layout_constraintEnd_toStartOf="@id/btnColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- COLOR -->
        <ImageButton
            android:id="@+id/btnColor"
            style="@style/ToolbarButtonModern"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_palette"
            app:layout_constraintStart_toEndOf="@id/btnRedo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
