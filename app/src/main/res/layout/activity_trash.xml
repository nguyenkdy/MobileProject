<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootTrash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB">

    <!-- ================= TOP BAR ================= -->
    <LinearLayout
        android:id="@+id/topBarTrash"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:padding="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ThÃ¹ng rÃ¡c"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"/>
    </LinearLayout>

    <!-- ================= TAB SWITCH ================= -->
    <LinearLayout
        android:id="@+id/layoutTrashTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@drawable/bg_tab_container"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBarTrash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnTrashNotes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ“ Ghi chÃº"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/bg_tab_active"/>

        <TextView
            android:id="@+id/btnTrashFolders"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ“ ThÆ° má»¥c"
            android:textColor="#666666"
            android:background="@drawable/bg_tab_inactive"/>
    </LinearLayout>

    <!-- ================= EMPTY STATE ================= -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutTrashTabs"
        app:layout_constraintBottom_toTopOf="@id/bottomTrashBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgEmpty"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_trash"
            android:alpha="0.35"/>

        <!-- âœ… Bá»” SUNG layout_width / layout_height -->
        <TextView
            android:id="@+id/txtEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ThÃ¹ng rÃ¡c trá»‘ng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666"/>

        <!-- âœ… Bá»” SUNG layout_width / layout_height + gravity center -->
        <TextView
            android:id="@+id/txtEmptyDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="KhÃ´ng cÃ³ má»¥c nÃ o Ä‘á»ƒ khÃ´i phá»¥c"
            android:textSize="14sp"
            android:textColor="#999"
            android:gravity="center"/>
    </LinearLayout>

    <!-- ================= LIST ================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTrash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layoutTrashTabs"
        app:layout_constraintBottom_toTopOf="@id/bottomTrashBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= FLOATING ACTION BAR ================= -->
    <LinearLayout
        android:id="@+id/bottomTrashBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_trash_action_bar"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ===== RESTORE ALL ===== -->
        <LinearLayout
            android:id="@+id/btnRestoreAll"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_btn_restore"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:src="@drawable/ic_restore"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="KhÃ´i phá»¥c"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- SPACE -->
        <View
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <!-- ===== DELETE FOREVER ===== -->
        <LinearLayout
            android:id="@+id/btnEmptyTrash"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_btn_delete"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:src="@drawable/ic_delete"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="XÃ³a vÄ©nh viá»…n"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
