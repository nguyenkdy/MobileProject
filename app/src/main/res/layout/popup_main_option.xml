<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_option"
    android:paddingVertical="8dp">

    <!-- ================= ALL NOTES ================= -->
    <LinearLayout
        android:id="@+id/optAllNotes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_allnotes"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả ghi chú"
            android:textSize="15sp"
            android:textColor="#1E1E1E"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- ================= SHARED NOTES ================= -->
    <LinearLayout
        android:id="@+id/optShared"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_shared"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú chia sẻ"
            android:textSize="15sp"
            android:textColor="#1E1E1E"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- ================= FOLDERS ================= -->
    <LinearLayout
        android:id="@+id/optFolders"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_folder"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thư mục"
            android:textSize="15sp"
            android:textColor="#1E1E1E"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- ================= DIVIDER ================= -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="6dp"/>

    <!-- ================= TRASH ================= -->
    <LinearLayout
        android:id="@+id/optTrash"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_trash"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thùng rác"
            android:textSize="15sp"
            android:textColor="#D32F2F"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</LinearLayout>
